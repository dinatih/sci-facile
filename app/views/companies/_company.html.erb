<div id="<%= dom_id company %>">
  <h2>
    <i class="fas fa-building-columns text-primary"></i>
    <%= t("activerecord.attributes.company.name") %>:
    <strong><%= company.name %></strong>
  </h2>
  <hr/>
  <h3><i class="fas fa-user-group text-primary"></i> <%= t("activerecord.models.associate.other") %>:</h3>
  <div id="associates">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col"><%= t("activerecord.attributes.associate.first_name") %></th>
          <th scope="col"><%= t("activerecord.attributes.associate.last_name") %></th>
          <th scope="col"><%= t("activerecord.attributes.associate.email") %></th>
          <th scope="col"><%= t("activerecord.attributes.associate.shares_count") %></th>
          <th scope="col"><%= t("activerecord.attributes.associate.initial_contribution") %></th>
          <th scope="col"><%= t("activerecord.attributes.associate.current_account_balance") %></th>
        </tr>
      </thead>
      <tbody>
        <% company.associates.each_with_index do |associate, index| %>
          <tr>
            <th scope="row"><%= link_to index + 1, company_associate_path(company, associate) %></th>
            <td><%= associate.first_name %></td>
            <td><%= associate.last_name %></td>
            <td><%= associate.email %></td>
            <td><%= number_with_delimiter(associate.shares_count) %></td>
            <td><%= number_to_currency(associate.initial_contribution) %></td>
            <td class="<%= associate.current_account_balance < 0 ? 'text-danger' : associate.current_account_balance > 0 ? 'text-success' : '' %>">
              <%= number_to_currency(associate.current_account_balance) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to t("helpers.new", model: t("activerecord.models.associate.one")), new_company_associate_path(company), class: "btn btn-outline-primary" %>
  <hr/>
  <h3><i class="fas fa-building text-primary"></i> <%= t("activerecord.models.property.other") %>:</h3>
  <div id="properties">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col"><%= t("activerecord.attributes.property.address") %></th>
          <th scope="col"><%= t("activerecord.attributes.property.description") %></th>
          <th scope="col"><%= t("activerecord.attributes.property.acquisition_date") %></th>
          <th scope="col"><%= t("activerecord.attributes.property.acquisition_price") %></th>
        </tr>
      </thead>
      <tbody>
        <% company.properties.each_with_index do |property, index| %>
          <tr>
            <th scope="row"><%= link_to index + 1, company_property_path(company, property) %></th>
            <td><%= property.address %></td>
            <td><%= property.description %></td>
            <td><%= l(property.acquisition_date, format: :medium) if property.acquisition_date %></td>
            <td><%= number_to_currency(property.acquisition_price) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to t("helpers.new", model: t("activerecord.models.property.one")), new_company_property_path(company), class: "btn btn-outline-primary" %>
  <hr/>
  <h3><i class="fas fa-file-invoice-dollar text-primary"></i> <%= t("activerecord.models.financial_operation.other") %>:</h3>
  <div id="financial_operations">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col"><%= t("activerecord.attributes.financial_operation.category") %></th>
          <th scope="col"><%= t("activerecord.attributes.financial_operation.label") %></th>
          <th scope="col"><%= t("activerecord.attributes.financial_operation.amount") %></th>
          <th scope="col"><%= t("activerecord.attributes.financial_operation.date") %></th>
        </tr>
      </thead>
      <tbody>
        <% company.financial_operations.each_with_index do |financial_operation, index| %>
          <tr>
            <th scope="row"><%= link_to index + 1, company_financial_operation_path(company, financial_operation) %></th>
            <td><%= financial_operation.category %></td>
            <td><%= financial_operation.label %></td>
            <td class="<%= financial_operation.amount < 0 ? 'text-danger' : financial_operation.amount > 0 ? 'text-success' : '' %>">
              <%= number_to_currency(financial_operation.amount) %>
            </td>
            <td><%= l(financial_operation.date, format: :medium) if financial_operation.date %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to t("helpers.new", model: t("activerecord.models.financial_operation.one")), new_company_financial_operation_path(company), class: "btn btn-outline-primary" %>
  <hr/>
  <h3><i class="fas fa-key text-primary"></i> <%= t("activerecord.models.tenant.other") %>:</h3>
