          <th scope="col"><%= t("activerecord.attributes.tenant.last_name") %></th>
          <th scope="col"><%= t("activerecord.attributes.tenant.email") %></th>
          <th scope="col"><%= t("activerecord.attributes.tenant.rent_amount") %></th>
