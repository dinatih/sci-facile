            <td><%= l(tenant.lease_end_date, format: :medium) if tenant.lease_end_date %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to t("helpers.new", model: t("activerecord.models.tenant.one")), new_company_tenant_path(company), class: "btn btn-outline-primary" %>
  <hr/>
  <h3><i class="fas fa-pen text-primary"> </i><%= t("activerecord.models.general_meeting.other") %>:</h3>
  <div id="general_meetings">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col"><%= t("activerecord.attributes.general_meeting.date") %></th>
          <th scope="col"><%= t("activerecord.attributes.general_meeting.title") %></th>
          <th scope="col"><%= t("activerecord.attributes.general_meeting.minutes_text") %></th>
        </tr>
      </thead>
      <tbody>
        <% company.general_meetings.each_with_index do |general_meeting, index| %>
          <tr>
            <th scope="row"><%= link_to index + 1, company_general_meeting_path(company, general_meeting) %></th>
            <td><%= l(general_meeting.date, format: :medium) if general_meeting.date %></td>
            <td><%= general_meeting.title %></td>
            <td><%= truncate(general_meeting.minutes_text, length: 100) if general_meeting.minutes_text %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to t("helpers.new", model: t("activerecord.models.general_meeting.one")), new_company_general_meeting_path(company), class: "btn btn-outline-primary" %>
</div>