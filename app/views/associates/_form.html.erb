<%= form_with(model: associate, url: company_associates_path(@company), html: { class: "row g-3" }) do |form| %>
  <% if associate.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= t("helpers.errors_prohibited", count: associate.errors.count, model: t("activerecord.models.associate.one")) %></h2>
      <ul>
        <% associate.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-12">
    <%= form.label :first_name, class: "form-label" %>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>
  <div class="col-12">
    <%= form.label :last_name, class: "form-label" %>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>
  <div class="col-12">
    <%= form.label :email, class: "form-label" %>
    <%= form.text_field :email, class: "form-control" %>
  </div>
  <div class="col-12">
    <%= form.label :shares_count, class: "form-label" %>
    <%= form.number_field :shares_count, class: "form-control" %>
  </div>
  <div class="col-12">
    <%= form.label :initial_contribution, class: "form-label" %>
    <%= form.text_field :initial_contribution, class: "form-control" %>
  </div>
  <div class="col-12">
    <%= form.label :current_account_balance, class: "form-label" %>
    <%= form.text_field :current_account_balance, class: "form-control" %>
  </div>
  <div class="col-12">
    <%= form.label :password, class: "form-label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= form.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>
  <div class="col-12">
    <%= form.label :password_confirmation, class: "form-label" %><br />
    <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>
  <div class="col-12">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>