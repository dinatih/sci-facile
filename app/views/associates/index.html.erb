<% content_for :title, t("activerecord.models.associate.other") %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h4 class="mb-0">
    <i class="fas fa-users text-primary me-2"></i>
    <%= t("activerecord.models.associate.other") %>
  </h4>
  <%= link_to t("helpers.new", model: t("activerecord.models.associate.one")), new_company_associate_path(@company), class: "btn btn-primary" %>
</div>

<div id="associates" class="row g-3">
  <% @associates.each do |associate| %>
    <div class="col-12 col-md-6 col-lg-4">
      <%= render associate %>
    </div>
  <% end %>
</div>
