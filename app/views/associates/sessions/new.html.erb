<h2>Se connecter</h2>
<div class="card mb-4">
  <div class="card-body">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "row g-3" }) do |f| %>
      <div class="col-12">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="col-12">
        <%= f.label :password, class: "form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="col-12 form-check">
          <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
          <%= f.label :remember_me, class: "form-check-label", for: "remember_me" %>
        </div>
      <% end %>

      <div class="col-12">
        <%= f.submit "Se connecter", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="card-footer">
    <%= render "associates/shared/links" %>
  </div>
</div>