<% content_for :title, t("helpers.edit", model: t("activerecord.models.associate.one")) %>

<div class="container my-4">
  <h4 class="mb-3">
    <i class="fas fa-user-edit text-primary me-2"></i>
    <%= t("helpers.edit", model: t("activerecord.models.associate.one")) %>
  </h4>

  <div class="card">
    <div class="card-body">
      <%= render "form", associate: @associate %>
    </div>
  </div>

  <div class="mt-3 d-flex gap-2">
    <%= link_to t("helpers.back", model: t("activerecord.models.associate.other")), company_associates_path(@associate.company), class: "btn btn-link" %>
  </div>
</div>