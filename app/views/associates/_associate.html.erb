<div id="<%= dom_id associate %>" class="card shadow-sm h-100">
  <div class="card-header d-flex justify-content-between align-items-center">
    <div class="fw-semibold">
      <i class="fas fa-user text-primary me-1"></i>
      <%= [associate.first_name, associate.last_name].compact.join(" ").presence || t("activerecord.models.associate.one") %>
    </div>
    <% if associate.email.present? %>
      <span class="badge bg-light">
        <%= mail_to associate.email, associate.email %>
      </span>
    <% end %>
  </div>
  <div class="card-body">
    <div class="row g-3">
      <div class="col-12 col-md-3">
        <div class="text-muted small"><%= t("activerecord.attributes.associate.shares_count") %></div>
        <div class="fw-semibold"><%= associate.shares_count %></div>
      </div>
      <div class="col-12 col-md-3">
        <div class="text-muted small"><%= t("activerecord.attributes.associate.shares_percentage") %></div>
        <div class="fw-semibold"><%= "#{associate.shares_percentage} %" %></div>
      </div>
      <div class="col-12 col-md-3">
        <div class="text-muted small"><%= t("activerecord.attributes.associate.initial_contribution") %></div>
        <div class="fw-semibold"><%= number_to_currency(associate.initial_contribution) %></div>
      </div>
      <div class="col-12 col-md-3">
        <div class="text-muted small"><%= t("activerecord.attributes.associate.current_account_balance") %></div>
        <div class="fw-semibold"><%= number_to_currency(associate.current_account_balance) %></div>
      </div>
    </div>
  </div>
  <div class="card-footer d-flex gap-2"> 
    <%= link_to t("helpers.links.show"), [associate.company, associate] %>
    <%= link_to t("helpers.links.edit"), edit_company_associate_path(associate.company, associate) %>
    <%= link_to t("helpers.links.destroy"), [associate.company, associate], data: { turbo_method: :delete, turbo_confirm: t("helpers.are_you_sure") }, class: "text-danger" %>
  </div>
</div>