<% content_for :title, t("activerecord.models.property.other") %>

<div class="container py-3">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 mb-0"><i class="fas fa-building text-primary me-2"></i><%= t("activerecord.models.property.other") %></h1>
    <div class="d-flex align-items-center gap-2">
      <div class="btn-group me-2" role="group" aria-label="period switcher">
        <%= link_to "Mois", company_properties_path(@company, period: :month), class: "btn btn-sm btn-outline-secondary #{'active' if params[:period] == 'month'}" %>
        <%= link_to "Trimestre", company_properties_path(@company, period: :quarter), class: "btn btn-sm btn-outline-secondary #{'active' if params[:period] == 'quarter'}" %>
        <%= link_to "AnnÃ©e", company_properties_path(@company, period: :year), class: "btn btn-sm btn-outline-secondary #{'active' if params[:period].blank? || params[:period] == 'year'}" %>
      </div>
      <%= link_to t("helpers.new", model: t("activerecord.models.property.one")), new_company_property_path(@company), class: "btn btn-primary" %>
    </div>
  </div>

  <div id="properties" class="row g-3">
    <% @properties.each do |property| %>
      <div class="col-12 col-md-6 col-lg-4">
        <%= render property %>
        <div class="mt-2 d-flex justify-content-end">
          <%= link_to t("helpers.show", model: t("activerecord.models.property.one")), [@company, property], class: "btn btn-sm btn-outline-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>