<% content_for :title, t("activerecord.models.property.one") %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4 mb-0"><i class="fas fa-building text-primary me-2"></i><%= t("activerecord.models.property.one") %></h1>
  <div class="d-flex align-items-center gap-2">
    <div class="btn-group me-2" role="group" aria-label="period switcher">
      <%= link_to "Mois", company_property_path(@company, @property, period: :month), class: "btn btn-sm btn-outline-secondary #{'active' if params[:period] == 'month'}" %>
      <%= link_to "Trimestre", company_property_path(@company, @property, period: :quarter), class: "btn btn-sm btn-outline-secondary #{'active' if params[:period] == 'quarter'}" %>
      <%= link_to "AnnÃ©e", company_property_path(@company, @property, period: :year), class: "btn btn-sm btn-outline-secondary #{'active' if params[:period].blank? || params[:period] == 'year'}" %>
    </div>
  </div>
</div>

<%= render @property %>

<div class="mt-3">
  <%= link_to t("helpers.back", model: t("activerecord.models.property.other")), company_properties_path(@company, period: params[:period]), class: "btn btn-link" %>
