<%= form_with(model: [@company, property], html: { class: "row g-4" }) do |form| %>
  <% if property.errors.any? %>
    <div class="col-12">
      <div class="alert alert-danger">
        <h2 class="h6 mb-2"><%= t("helpers.errors_prohibited", count: property.errors.count, model: t("activerecord.models.property.one")) %></h2>
        <ul class="mb-0">
          <% property.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="col-12">
    <%= form.label :address, class: "form-label" %>
    <%= form.text_field :address, class: "form-control", placeholder: "12 rue de l'Exemple, Paris" %>
  </div>

  <div class="col-12">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, rows: 4, class: "form-control", placeholder: "Description du bien (surface, étage, etc.)" %>
  </div>

  <div class="col-md-6">
    <%= form.label :acquisition_date, class: "form-label" %>
    <%= form.date_field :acquisition_date, class: "form-control" %>
    <div class="form-text">AAAA-MM-JJ</div>
  </div>

  <div class="col-md-6">
    <%= form.label :acquisition_price, class: "form-label" %>
    <div class="input-group">
      <span class="input-group-text">€</span>
      <%= form.number_field :acquisition_price, step: "0.01", min: 0, class: "form-control", placeholder: "0,00" %>
    </div>
  </div>

  <div class="col-12 d-flex justify-content-end">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>