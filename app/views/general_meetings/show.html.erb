<% content_for :title, t("activerecord.models.general_meeting.one") %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4 mb-0">
    <i class="fas fa-pen text-primary me-2"></i>
    <%= t("activerecord.models.general_meeting.one") %>
  </h1>
  <div class="btn-group">
    <%= link_to t("helpers.edit", model: t("activerecord.models.general_meeting.one")), edit_company_general_meeting_path(@company, @general_meeting), class: "btn btn-outline-primary" %>
    <%= button_to t("helpers.destroy", model: t("activerecord.models.general_meeting.one")), [@company, @general_meeting], method: :delete, class: "btn btn-outline-danger" %>
  </div>
</div>

<%= render @general_meeting %>

<div class="mt-3">
  <%= link_to t("helpers.back", model: t("activerecord.models.general_meeting.other")), company_general_meetings_path(@company), class: "btn btn-link" %>
</div>
