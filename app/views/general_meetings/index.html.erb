<% content_for :title, t("activerecord.models.general_meeting.other") %>

<div class="container my-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">
      <i class="fas fa-pen text-primary me-2"></i>
      <%= t("activerecord.models.general_meeting.other") %>
    </h4>
    <%= link_to t("helpers.new", model: t("activerecord.models.general_meeting.one")), new_company_general_meeting_path(@company), class: "btn btn-primary" %>
  </div>

  <div id="general_meetings" class="row g-3">
    <% @general_meetings.each do |general_meeting| %>
      <div class="col-12 col-md-6">
        <%= render general_meeting %>
        <div class="mt-2 d-flex gap-2">
          <%= link_to t("helpers.show", model: t("activerecord.models.general_meeting.one")), [@company, general_meeting], class: "btn btn-outline-primary btn-sm" %>
          <%= link_to t("helpers.edit", model: t("activerecord.models.general_meeting.one")), edit_company_general_meeting_path(@company, general_meeting), class: "btn btn-outline-secondary btn-sm" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-3">
    <%= link_to t("helpers.back", model: t("activerecord.models.company.one")), company_path(@company), class: "btn btn-link" %>
  </div>
</div>