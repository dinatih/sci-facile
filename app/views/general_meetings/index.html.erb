<% content_for :title, t(".title") %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4 mb-0">
    <i class="fas fa-pen text-primary me-2"></i>
    <%= t(".title") %>
  </h1>
  <%= link_to t(".new_link"), new_company_general_meeting_path(@company), class: "btn btn-primary" %>
</div>

<div id="general_meetings" class="row g-3">
  <% @general_meetings.each do |general_meeting| %>
    <div class="col-12 col-md-6">
      <%= render general_meeting %>
    </div>
  <% end %>
</div>
