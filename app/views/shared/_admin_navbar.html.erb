<% if current_admin_user %>
  <nav id="admin-navbar" class="navbar navbar-expand-md navbar-light">
    <button class="navbar-toggler" data-target="#admin-navbar-collapse" data-toggle="collapse" type="button">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div id="admin-navbar-collapse" class="collapse navbar-collapse">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to admin_root_path, class: 'nav-link' do %>
            <i class="fas fa-eye"></i>
            <b>Admin' - SCI-Facile</b>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to admin_admin_user_path(current_admin_user), class: 'nav-link' do %>
            <i class="fas fa-user"></i>
            <%= current_admin_user.email %>
          <% end %>
        </li>
      </ul>
    </div>
