<% content_for :title, t("activerecord.models.financial_operation.one") %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h4 class="mb-0">
    <i class="fas fa-file-invoice-dollar text-primary me-2"></i>
    <%= t("activerecord.models.financial_operation.one") %>
  </h4>
  <div class="d-flex gap-2">
    <%= link_to t("helpers.edit", model: t("activerecord.models.financial_operation.one")), edit_company_financial_operation_path(@company, @financial_operation), class: "btn btn-outline-secondary" %>
    <%= button_to t("helpers.destroy", model: t("activerecord.models.financial_operation.one")), [@company, @financial_operation], method: :delete, form: { data: { turbo_confirm: t("helpers.are_you_sure") } }, class: "btn btn-danger" %>
  </div>
</div>

<div class="mb-4">
  <%= render @financial_operation %>
</div>

<div>
  <%= link_to t("helpers.back", model: t("activerecord.models.financial_operation.other")), company_financial_operations_path(@company), class: "btn btn-link" %>
</div>
