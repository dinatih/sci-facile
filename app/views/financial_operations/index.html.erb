<% content_for :title, t("activerecord.models.financial_operation.other") %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h4 class="mb-0">
    <i class="fas fa-file-invoice-dollar text-primary me-2"></i>
    <%= t("activerecord.models.financial_operation.other") %>
  </h4>
  <%= link_to t("helpers.new", model: t("activerecord.models.financial_operation.one")), new_company_financial_operation_path(@company), class: "btn btn-primary" %>
</div>

<div id="financial_operations" class="row g-3">
  <% @financial_operations.each do |financial_operation| %>
    <div class="col-12 col-md-6">
      <%= render financial_operation, show_actions: true %>
    </div>
  <% end %>
</div>

<div class="mt-3">
  <%= link_to t("helpers.back", model: t("activerecord.models.company.one")), company_path(@company), class: "btn btn-link" %>
</div>
