<% content_for :title, t(".title") %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4 mb-0">
    <i class="fas fa-file-invoice-dollar text-primary me-2"></i>
    <%= t(".title") %>
  </h1>
  <%= link_to t(".new_link"), new_company_financial_operation_path(@company), class: "btn btn-primary" %>
</div>

<div id="financial_operations" class="row g-3">
  <% @financial_operations.each do |financial_operation| %>
    <div class="col-12 col-md-6">
      <%= render financial_operation %>
    </div>
  <% end %>
</div>
