<% content_for :title, t("helpers.edit", model: t("activerecord.models.tenant.one")) %>

<div class="container my-4">
  <h4 class="mb-3">
    <i class="fas fa-user-edit text-primary me-2"></i>
    <%= t("helpers.edit", model: t("activerecord.models.tenant.one")) %>
  </h4>

  <div class="card">
    <div class="card-body">
      <%= render "form", tenant: @tenant %>
    </div>
  </div>

  <div class="mt-3 d-flex gap-2">
    <%= link_to t("helpers.show", model: t("activerecord.models.tenant.one")), [@company, @tenant], class: "btn btn-outline-primary" %>
    <%= link_to t("helpers.back", model: t("activerecord.models.tenant.other")), company_tenants_path(@company), class: "btn btn-link" %>
  </div>
</div>