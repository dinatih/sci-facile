<% content_for :title, t("activerecord.models.tenant.one") %>

<div class="container my-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">
      <i class="fas fa-user text-primary me-2"></i>
      <%= [@tenant.first_name, @tenant.last_name].compact.join(" ") %>
    </h4>
    <div class="d-flex gap-2">
      <%= link_to t("helpers.edit", model: t("activerecord.models.tenant.one")), edit_company_tenant_path(@company, @tenant), class: "btn btn-outline-secondary" %>
      <%= button_to t("helpers.destroy", model: t("activerecord.models.tenant.one")), [@company, @tenant], method: :delete, form: { data: { turbo_confirm: t("helpers.are_you_sure") } }, class: "btn btn-danger" %>
    </div>
  </div>

  <div class="mb-4">
    <%= render @tenant %>
  </div>

  <div>
    <%= link_to t("helpers.back", model: t("activerecord.models.tenant.other")), company_tenants_path(@company), class: "btn btn-link" %>
  </div>
</div>