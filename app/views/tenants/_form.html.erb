<%= form_with(model: [@company, tenant], html: { class: "row g-3" }) do |form| %>
  <% if tenant.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= t("helpers.errors_prohibited", count: tenant.errors.count, model: t("activerecord.models.tenant.one")) %></h2>
      <ul>
        <% tenant.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-12">
    <%= form.label :property_id, class: "form-label" %>
    <%= form.text_field :property_id, class: "form-control" %>
  </div>
  <div class="col-12">
    <%= form.label :first_name, class: "form-label" %>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>
  <div class="col-12">
    <%= form.label :last_name, class: "form-label" %>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>
  <div class="col-12">
    <%= form.label :email, class: "form-label" %>
    <%= form.text_field :email, class: "form-control" %>
  </div>
  <div class="col-12">
    <%= form.label :rent_amount, class: "form-label" %>
    <%= form.text_field :rent_amount, class: "form-control" %>
  </div>
  <div class="col-12">
    <%= form.label :charges_amount, class: "form-label" %>
    <%= form.text_field :charges_amount, class: "form-control" %>
  </div>
  <div class="col-12">
    <%= form.label :lease_start_date, class: "form-label" %>
    <%= form.date_field :lease_start_date, class: "form-control" %>
  </div>
  <div class="col-12">
    <%= form.label :lease_end_date, class: "form-label" %>
    <%= form.date_field :lease_end_date, class: "form-control" %>
  </div>
  <div class="col-12">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>