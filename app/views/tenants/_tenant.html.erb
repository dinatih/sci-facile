<div id="<%= dom_id tenant %>" class="card shadow-sm h-100">
  <div class="card-header d-flex justify-content-between align-items-center">
    <div class="fw-semibold">
      <i class="fas fa-home-user text-primary me-1"></i>
      <%= [tenant.first_name, tenant.last_name].compact.join(" ").presence || t("activerecord.models.tenant.one") %>
    </div>
    <% if tenant.email.present? %>
      <span class="badge">
        <%= mail_to tenant.email, tenant.email %>
      </span>
    <% end %>
  </div>
  <div class="card-body">
    <div class="row g-3">
      <div class="col-12">
        <div class="text-muted small"><i class="fas fa-building me-1"></i> <%= t("activerecord.models.property.one") %></div>
        <div class="fw-semibold">
          <% if tenant.property.present? %>
            <%= tenant.property.address.presence || (t("activerecord.models.property.one") + " #" + tenant.property.id.to_s) %>
          <% else %>
            <%= t("activerecord.attributes.tenant.property_id") %>: <%= tenant.property_id %>
          <% end %>
        </div>
      </div>
      <div class="col-12 col-md-6">
        <div class="text-muted small"><%= t("activerecord.attributes.tenant.rent_amount") %></div>
        <div class="fw-semibold"><%= number_to_currency(tenant.rent_amount) if tenant.rent_amount.present? %></div>
      </div>
      <div class="col-12 col-md-6">
        <div class="text-muted small"><%= t("activerecord.attributes.tenant.charges_amount") %></div>
        <div class="fw-semibold"><%= number_to_currency(tenant.charges_amount) if tenant.charges_amount.present? %></div>
      </div>
      <div class="col-12 col-md-6">
        <div class="text-muted small"><%= t("activerecord.attributes.tenant.lease_start_date") %></div>
        <div class="fw-semibold"><%= l(tenant.lease_start_date, format: :long) if tenant.lease_start_date.present? %></div>
      </div>
      <div class="col-12 col-md-6">
        <div class="text-muted small"><%= t("activerecord.attributes.tenant.lease_end_date") %></div>
        <div class="fw-semibold"><%= l(tenant.lease_end_date, format: :long) if tenant.lease_end_date.present? %></div>
      </div>
    </div>
  </div>
  <div class="card-footer d-flex justify-content-between align-items-center">
    <%= link_to t("helpers.show"), [tenant.property.company, tenant] %>
    <%= link_to t("helpers.edit"), edit_company_tenant_path(tenant.property.company, tenant) %>
    <%= link_to t("helpers.destroy"), [tenant.property.company, tenant], method: :delete, data: { turbo_confirm: t("helpers.are_you_sure") }, class: "link-danger" %>
  </div>
</div>